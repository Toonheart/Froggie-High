        <event-group collapsed="1" description="Always scroll to the current top position the player has reached, but never scroll horizontally." sid="1798349744354641" title="SCROLL">
            <sub-events>
                <event-block sid="6325441995628482">
                    <conditions>
                        <condition id="-1" name="Every tick" sid="7219760315101111" type="System" />
                    </conditions>
                    <actions>
                        <action id="-7" name="Scroll to position" sid="6207197709355826" type="System">
                            <param id="0" name="X">LayoutWidth/2</param>
                            <param id="1" name="Y">ScrollTo</param>
                        </action>
                    </actions>
                </event-block>
                <comment>Scroll down if the froggie is dropping</comment>
                <event-block sid="8875596772007714">
                    <conditions>
                        <condition behavior="Platform" id="4" name="Is falling" sid="2598144020044228" type="Froggie" />
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block sid="1916611199770553">
                            <conditions>
                                <condition id="-3" inverted="1" name="Is on-screen" sid="8978206875520692" type="Froggie" />
                            </conditions>
                            <actions>
                                <action id="-9" name="Set value" sid="3433851510055342" type="System">
                                    <param id="0" name="Variable">ScrollTo</param>
                                    <param id="1" name="Value">Froggie.Y</param>
                                </action>
                                <action id="0" name="Play" sid="9729474452581961" type="Audio">
                                    <param id="0" name="Audio file">Fall</param>
                                    <param id="2" name="Loop">0</param>
                                    <param id="3" name="Volume">0</param>
                                    <param id="1" name="Tag (optional)">&quot;Falling&quot;</param>
                                </action>
                            </actions>
                        </event-block>
                        <comment>Every time Loading the layout intialize the required GlobalVar&apos;s to default instead of setting all Globalvariables Defult</comment>
                        <event-block sid="3664907805686409">
                            <conditions>
                                <condition id="-2" name="Compare Y" sid="3974289724973874" type="Froggie">
                                    <param id="0" name="Comparison">4</param>
                                    <param id="1" name="Y co-ordinate">Froggie.FallDistance+1280</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-9" name="Destroy" sid="1023683695412448" type="Froggie" />
                            </actions>
                        </event-block>
